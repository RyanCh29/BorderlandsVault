<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory.DisplayItemActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner_constraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/image_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.00" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/image_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toStartOf="@id/image_right_guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/image_left_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shield" />
        <!--TOP BAR-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_bar_guidelineH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

        <EditText
            android:id="@+id/score_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:ems="3"
            android:hint="Score"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@id/top_bar_guidelineH"
            app:layout_constraintStart_toStartOf="@+id/imageView" />

        <EditText
            android:id="@+id/level_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:ems="2"
            android:hint="lvl"
            android:inputType="none|number"
            android:maxLength="2"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@id/top_bar_guidelineH"
            app:layout_constraintStart_toStartOf="@id/input_right_guidelineV" />

        <!---->
        <EditText
            android:id="@+id/name_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="15"
            android:hint="Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#d49e51"
            android:textColorHint="#d49e51"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_guidelineH" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/input_mid_guidelineV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.42" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/input_right_guidelineV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.82" />
        <!--CAPACITY-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cap_guidelineH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.197" />

        <TextView
            android:id="@+id/cap_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textColor="#d49e51"
            app:layout_constraintBottom_toTopOf="@+id/cap_guidelineH"
            app:layout_constraintStart_toStartOf="@+id/input_mid_guidelineV" />

        <EditText
            android:id="@+id/cap_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="4"
            android:hint="capacity"
            android:inputType="number"
            android:maxLength="5"
            android:textSize="14sp"
            android:textColor="#d49e51"
            android:textColorHint="#d49e51"
            app:layout_constraintBottom_toTopOf="@+id/cap_guidelineH"
            app:layout_constraintStart_toStartOf="@+id/input_right_guidelineV" />
        <!--RECHARGE DELAY-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/delay_guidelineH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.245" />

        <TextView
            android:id="@+id/delay_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recharge Delay"
            android:textColor="#d49e51"
            app:layout_constraintBottom_toTopOf="@+id/delay_guidelineH"
            app:layout_constraintStart_toStartOf="@+id/input_mid_guidelineV" />

        <EditText
            android:id="@+id/delay_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="4"
            android:hint="delay"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textSize="14sp"
            android:textColor="#d49e51"
            android:textColorHint="#d49e51"
            app:layout_constraintBottom_toTopOf="@+id/delay_guidelineH"
            app:layout_constraintStart_toStartOf="@+id/input_right_guidelineV" />
        <!--RECHARGE RATE-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rate_guidelineH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.293" />

        <TextView
            android:id="@+id/rate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recharge Rate"
            android:textColor="#d49e51"
            app:layout_constraintBottom_toTopOf="@+id/rate_guidelineH"
            app:layout_constraintStart_toStartOf="@+id/input_mid_guidelineV" />

        <EditText
            android:id="@+id/rate_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="4"
            android:hint="rate"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="14sp"
            android:textColor="#d49e51"
            android:textColorHint="#d49e51"
            app:layout_constraintBottom_toTopOf="@+id/rate_guidelineH"
            app:layout_constraintStart_toStartOf="@+id/input_right_guidelineV" />
        <!--RELOAD-->
