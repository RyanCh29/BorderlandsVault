<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/itemScore_editText"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Score"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/level_editText"
        android:layout_width="81dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Req Lvl"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Weapon Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemScore_editText" />

    <ImageView
        android:id="@+id/character_imageView"
        android:layout_width="141dp"
        android:layout_height="139dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/skill1_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rarity_textView"
        app:srcCompat="@drawable/borderlands3logo" />

    <TextView
        android:id="@+id/rarity_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="12dp"
        android:text="Legendary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_editText" />

    <TextView
        android:id="@+id/skill1_textView"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:text="Damage"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/character_imageView" />

    <EditText
        android:id="@+id/skill1_editText"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="dmg"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/skill1_textView"
        app:layout_constraintTop_toBottomOf="@+id/skill1_textView" />

    <TextView
        android:id="@+id/skill2_textView"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:text="Accuracy"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/skill1_textView"
        app:layout_constraintTop_toTopOf="@+id/skill1_textView" />

    <EditText
        android:id="@+id/skill2_editText"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_marginStart="1dp"
        android:ems="10"
        android:hint="acc"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/skill1_editText"
        app:layout_constraintTop_toBottomOf="@+id/skill2_textView" />

    <TextView
        android:id="@+id/skill3_textView"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:text="Handling"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/skill2_textView"
        app:layout_constraintTop_toTopOf="@+id/skill2_textView" />

    <EditText
        android:id="@+id/skill3_editText"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="hdl"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/skill2_editText"
        app:layout_constraintTop_toBottomOf="@+id/skill3_textView" />

    <TextView
        android:id="@+id/redText_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Red Text (autofill based on name)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>