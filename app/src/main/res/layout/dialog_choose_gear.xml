<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/weapon_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weapon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shield_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weapon_button" />

    <Button
        android:id="@+id/grenadeMod_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grenade Mod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shield_button" />

    <Button
        android:id="@+id/classMod_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Class Mod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grenadeMod_button" />

    <Button
        android:id="@+id/artifact_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artifact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classMod_button" />

</androidx.constraintlayout.widget.ConstraintLayout>